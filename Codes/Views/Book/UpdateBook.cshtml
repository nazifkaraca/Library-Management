@model BookViewModel

@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" href="~/css/bookStyles.css" />

<div class="content">
    <div class="container-fluid">
        <div class="form-container">
            <h4 class="page-title">Kitap Güncelleme</h4>
            <form asp-action="UpdateBook" asp-controller="Book" method="post">
                <input type="hidden" asp-for="Id" />
                <label>Kitap Adı</label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>

                <label asp-for="AuthorId">Yazar</label>
                <select asp-for="AuthorId" asp-items="@Model.Authors" class="form-control">
                    <option value="">Yazar Seçiniz</option> 
                </select>

                <label>Kitap Türü</label>
                <input type="text" asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>

                <label>Yayın Tarihi</label>
                <input type="date" asp-for="PublishDate" class="form-control" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
                
                <label>ISBN</label>
                <input type="text" asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
                
                <label>Stok</label>
                <input type="text" asp-for="CopiesAvailable" class="form-control" />
                <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
                
                <button type="submit" class="btn btn-success">Kitap Bilgilerini Güncelle</button>

                <a href="/#books" class="btn btn-warning">Geri Dön</a>
            </form>
        </div>
    </div>
</div>