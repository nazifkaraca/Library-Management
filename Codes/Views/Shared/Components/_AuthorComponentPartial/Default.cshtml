@model List<Author>

@{
	int count = 0;
}

<section id="authors" class="two">
	<div class="container">

		<header>
			<h2>Yazarlar</h2>
            <link rel="stylesheet" href="~/css/authorHomeStyles.css" />
        </header>

        <div class="bootstrap-scope">
            <table class="table table-bordered table-hover mt-3 w-100">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Yazar Id</th>
                        <th scope="col">Adı</th>
                        <th scope="col">Soyadı</th>
                        <th scope="col">Doğum Tarihi</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.DateOfBirth.ToShortDateString()</td>
                            <td>
                                <a asp-controller="Author" asp-action="DeleteAuthor" asp-route-id="@item.Id"
                                   class="btn btn-danger"
                                   onclick="return confirm('Bu yazarı silmek istediğinizden emin misiniz? Bu yazar ile birlikte tüm KİTAPLARI da silinecektir!');">
                                    Sil
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Author" asp-action="UpdateAuthor" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                            </td>
                            <td>
                                <a asp-controller="Author" asp-action="DetailAuthor" asp-route-id="@item.Id" class="btn btn-warning">Detaylar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Author" asp-action="CreateAuthor" class="btn btn-success">Yazar Ekle</a>
        </div>



	</div>
</section>