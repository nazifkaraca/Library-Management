@model Author

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yazar Güncelleme</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yazar Bilgilerini Güncelle</div>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateAuthor" asp-controller="Author" method="post">
                            <input type="hidden" asp-validation-for="Id" />
                            <label>Yazar Adı</label>
                            <input type="text" asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <br />
                            <label>Yazar Soyadı</label>
                            <input type="text" asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <br />
                            <label>Doğum Tarihi</label>
                            <input type="date" asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            <br />
                            <button class="btn btn-success">Yazar Bilgilerini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>  
</div>

